<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="/img/recoverPass.png" class="img-fluid"
          alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        {{#if expired}}
          <p class="lead">{{expired}}</p>
        {{/if}}
        <form action="/api/users/recoverPass" method="post">
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="E-mail"/>
            <label class="form-label" for="email">Por favor ingresa tu e-mail para enviarte un mail para que puedas re-establecer tu contrase√±a</label>
          </div>

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg btn-block">Enviar</button>
        </form>
      </div>
    </div>
  </div>
</section>